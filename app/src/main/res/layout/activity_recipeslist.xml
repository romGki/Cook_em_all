<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e3ed"
    tools:context="RecipesList">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/searchcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#f0e4ce"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toTopOf="@+id/recipesRV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="-4dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/search_shape"
                        android:iconifiedByDefault="false"
                        android:queryHint="Search..."
                        app:layout_constraintEnd_toStartOf="@id/filterButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/filterButton"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/search_shape"
                        android:contentDescription=""
                        android:onClick="filterButton"
                        app:backgroundTint="#c58972"
                        app:icon="@drawable/baseline_filter_list_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/searchView" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/servingscard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#f0e4ce"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/filterLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="10dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/linearLayoutType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            app:layout_constraintBottom_toTopOf="@id/linearLayoutIngredients"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/filterLayout">

                            <TextView
                                android:id="@+id/typeFilterView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Είδος γεύματος"
                                android:textColor="#c58972"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/linearLayoutTypeButtons">

                            </TextView>

                            <LinearLayout
                                android:id="@+id/linearLayoutTypeButtons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <Button
                                    android:id="@+id/buttonType1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTypeButton"
                                    android:text="Πρωινό"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972">

                                </Button>

                                <Button
                                    android:id="@+id/buttonType2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTypeButton"
                                    android:text="Brunch"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonType1">

                                </Button>

                                <Button
                                    android:id="@+id/buttonType3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTypeButton"
                                    android:text="Ορεκτικά"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonType1">

                                </Button>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutTypeButtons2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintTop_toBottomOf="@id/linearLayoutTypeButtons">

                                <Button
                                    android:id="@+id/buttonType4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTypeButton"
                                    android:text="Κυρίως γεύμα"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toStartOf="parent">

                                </Button>

                                <Button
                                    android:id="@+id/buttonType5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTypeButton"
                                    android:text="Γλυκά"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonType4">

                                </Button>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutIngredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            app:layout_constraintBottom_toTopOf="@id/linearLayoutDiff"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/linearLayoutType">

                            <TextView
                                android:id="@+id/ingredientsFilterView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Βασίκο Συστατικό"
                                android:textColor="#c58972"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/linearLayoutIngedientsButtons">

                            </TextView>

                            <LinearLayout
                                android:id="@+id/linearLayoutIngedientsButtons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <Button
                                    android:id="@+id/buttonIng1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Μοσχάρι"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Χοιρινό"
                                    android:textColor="@color/white"
