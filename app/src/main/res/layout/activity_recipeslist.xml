                                </Button>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutIngedientsButtons2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/linearLayoutIngedientsButtons">

                                <Button
                                    android:id="@+id/buttonIng4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Φακή"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Φασόλια"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonIng4">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Γίγαντες"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonIng5">

                                </Button>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutIngedientsButtons3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/linearLayoutIngedientsButtons2">

                                <Button
                                    android:id="@+id/buttonIng7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Ρεβίθια"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Κοτόπουλο"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonIng7">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Γαλοπούλα"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonIng8">

                                </Button>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutIngedientsButtons4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/linearLayoutIngedientsButtons3">

                                <Button
                                    android:id="@+id/buttonIng10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Πάπια"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Ζυμαρικά"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonIng10">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Θαλασσινά"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonIng8">

                                </Button>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutIngedientsButtons5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/linearLayoutIngedientsButtons4">


                                <Button
                                    android:id="@+id/buttonIng13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Ρύζι"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Πατάτα"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonIng8">

                                </Button>

                                <Button
                                    android:id="@+id/buttonIng15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterIngButton"
                                    android:text="Λαχανικά"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonIng9">

                                </Button>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutDiff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            app:layout_constraintBottom_toTopOf="@id/linearLayoutTime"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/linearLayoutIngredients">

                            <TextView
                                android:id="@+id/diffFilterView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Δυσκολία"
                                android:textColor="#c58972"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/linearLayoutDiffButtons">

                            </TextView>

                            <LinearLayout
                                android:id="@+id/linearLayoutDiffButtons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <Button
                                    android:id="@+id/buttonDiff1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterDiffButton"
                                    android:text="Εύκολη"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972">

                                </Button>

                                <Button
                                    android:id="@+id/buttonDiff2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterDiffButton"
                                    android:text="Μεσαία"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonDiff1">

                                </Button>

                                <Button
                                    android:id="@+id/buttonDiff3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterDiffButton"
                                    android:text="Δύσκολη"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonDiff2">

                                </Button>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            app:layout_constraintBottom_toTopOf="@id/clearButton"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/linearLayoutDiff">

                            <TextView
                                android:id="@+id/timeFilterView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Χρόνος Εκτέλεσης:"
                                android:textColor="#c58972"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/linearLayoutTimeButtons">

                            </TextView>

                            <LinearLayout
                                android:id="@+id/linearLayoutTimeButtons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <Button
                                    android:id="@+id/buttonTime1"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTimeButton"
                                    android:text="5'"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972">

                                </Button>

                                <Button
                                    android:id="@+id/buttonTime2"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTimeButton"
                                    android:text="10'"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonTime1">

                                </Button>

                                <Button
                                    android:id="@+id/buttonTime3"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTimeButton"
                                    android:text="15'"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonTime2">>

                                </Button>

                                <Button
                                    android:id="@+id/buttonTime4"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTimeButton"
                                    android:text="20'"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonTime3">

                                </Button>

                                <Button
                                    android:id="@+id/buttonTime5"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTimeButton"
                                    android:text="25'"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toStartOf="@id/parent">

                                </Button>

                                <Button
                                    android:id="@+id/buttonTime6"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTimeButton"
                                    android:text="30'"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonTime5">

                                </Button>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayoutTimeButtons2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintTop_toBottomOf="@id/linearLayoutTimeButtons">

                                <Button
                                    android:id="@+id/buttonTime7"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTimeButton"
                                    android:text="35'"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonTime6">

                                </Button>

                                <Button
                                    android:id="@+id/buttonTime8"
                                    android:layout_width="56dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:onClick="filterTimeButton"
                                    android:text="40'"
                                    android:textColor="@color/white"
                                    app:backgroundTint="#c58972"
                                    app:layout_constraintStart_toEndOf="@id/buttonTime7">

